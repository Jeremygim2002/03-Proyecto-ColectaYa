# Base de datos PostgreSQL
# Cambiar 'usuario', 'password' y 'puerto' por tus datos reales
DATABASE_URL="postgresql://usuario:password@localhost:5432/colectaya_db"

# JWT Secret - Cambiar por uno seguro en producción
JWT_SECRET="tu-super-secreto-jwt-muy-seguro-256-bits"
JWT_EXPIRES_IN="7d"

# Configuración del servidor
PORT=3000
NODE_ENV="development"

# Frontend URL (cuando esté listo)
FRONTEND_URL="http://localhost:3001"

# Rate Limiting - Prevención de ataques DDoS
THROTTLE_TTL=60000    # 60 segundos
THROTTLE_LIMIT=10     # 10 requests por ventana